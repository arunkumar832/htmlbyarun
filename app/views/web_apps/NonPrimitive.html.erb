<script>
//**********Object************
var prod = {ProductId:1,
                    Name:"Nike Shoe",
                   Price:4000.40,
                    isInStock:true,
                   Photo:"/shoe.jpg",
                  cities:["Delhi","Mumbai","Hyderabad"]
              };

function ShowClick() {
  document.getElementById("hide").style.display = "block";
  document.getElementById("details").style.display = "block";
  document.getElementById("pic").src = prod.Photo;
  document.getElementById("prodId").innerHTML= prod.ProductId;
  document.getElementById("prodName").innerHTML= prod.Name;
  document.getElementById("prodPrice").innerHTML= "&#8377;"+prod.Price;
  document.getElementById("shipped").innerHTML=prod.cities;

  if(prod.isInStock==true)
  {
    stock = "Available";
  }
  else
  {
    stock="Out of Stock";
  }
  document.getElementById("IsInstock").innerHTML= stock;
}
function HideClick() {

  document.getElementById("details").style.display = "none";
  document.getElementById("hide").style.display = "none";

}
//**********Array of objects*****************
var products = [
  {Id:0,
  Name:"Nike Shoe",
  Price:4000.40,
  Photo:"/shoe.jpg"

  },
  {Id:1,
    Name:"Bag",
    Price:502.3,
    Photo:"/bag.jpg"
  }
];
function ShowProduct() {
  document.getElementById("viewProduct").style = "block"
  var index = document.getElementById("index").value;
  document.getElementById("prodsId").innerHTML = products[index].Id;
  document.getElementById("prodsName").innerHTML = products[index].Name;
  document.getElementById("prodsPrice").innerHTML = "&#8377;"+products[index].Price;
  document.getElementById("pics").src = products[index].Photo
}

//**********Object************
</script>
<body bgcolor="#e9967a">
